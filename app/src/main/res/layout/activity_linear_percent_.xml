<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/activity_linear_percent_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danielacedo.linearpercent.LinearPercent_Activity">

    <Button
        android:text="@string/btn_A"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn_A"
        android:background="@drawable/shape_a"
        android:padding="15dp"
        android:layout_weight="1"
         />

    <Button
        android:text="@string/btn_B"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn_B"
        android:layout_weight="1"
         />

    <Button
        android:text="@string/btn_C"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn_C"
        android:layout_weight="2"/>
</LinearLayout>
